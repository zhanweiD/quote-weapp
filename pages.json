{
	"easycom": {
	        // 下载安装的方式需要前面的"@/"，npm安装的方式无需"@/"
	        // 下载安装方式
	        "^u-(.*)": "uview-ui/components/u-$1/u-$1.vue"
	        // npm安装方式
	        // "^u-(.*)": "uview-ui/components/u-$1/u-$1.vue"
	},
	"pages": [
		// 首页
		{
			"path": "pages/article/index",
			"style": {
				"titleNView": false,
				"navigationStyle": "custom",
				"enablePullDownRefresh": false, // 不开启下拉刷新, 默认就是false
				"disableScroll": true, // 禁止滚动, 解决scroll-view在Android小程序卡顿的问题
				"app-plus": {
					"bounce": "none" // 取消iOS回弹,避免和下拉刷新冲突 (小程序无法取消, 点此查看H5端的取消方法... )
				},
				"navigationBarTitleText": "报价平台"
			}
		},
		// 供应商
		{
			"path": "pages/merchants/index",
			"style": {
				"titleNView": false,
				"navigationStyle": "custom",
				"enablePullDownRefresh": false, // 不开启下拉刷新, 默认就是false
				"disableScroll": true, // 禁止滚动, 解决scroll-view在Android小程序卡顿的问题
				"app-plus": {
					"bounce": "none" // 取消iOS回弹,避免和下拉刷新冲突 (小程序无法取消, 点此查看H5端的取消方法... )
				},
				"navigationBarTitleText": "报价平台"
			}
		},
		// 分类
		{
			"path": "pages/list/index",
			"style": {
				"titleNView": false,
				"navigationStyle": "custom",
				"enablePullDownRefresh": false, // 不开启下拉刷新, 默认就是false
				"disableScroll": true, // 禁止滚动, 解决scroll-view在Android小程序卡顿的问题
				"app-plus": {
					"bounce": "none" // 取消iOS回弹,避免和下拉刷新冲突 (小程序无法取消, 点此查看H5端的取消方法... )
				},
				"navigationBarTitleText": "报价平台"
			}
		},
		
		// 商品详情
		{
			"path" : "pages/detail/detail",
			"style" :                                                                                    
			{
				"navigationBarTitleText": "商品详情",
				"enablePullDownRefresh": false
				// "navigationStyle":"custom"
			}
		},
		
		// 用户
		{
			"path": "pages/user/index",
			"style": {
				// #ifdef H5
				//"titleNView": false,
				"navigationBarBackgroundColor": "#FFFFFF",
				"navigationBarTextStyle": "black",
				"navigationBarTitleText": "用户中心",
				// #endif
				// #ifndef H5
				"navigationStyle": "custom",
				"navigationBarTitleText": "我的",
				// #endif
				"enablePullDownRefresh": true
			}
		},
		
		// 登录
		{
			"path": "pages/wechat/miniAppLogin",
			"style": {
				"navigationBarTitleText": "登录"
			}
		},
		// 充值
		{
			"path": "pages/user/favorite",
			"style": {
				"enablePullDownRefresh": false, // 不开启下拉刷新, 默认就是false
				"disableScroll": true, // 禁止滚动, 解决scroll-view在Android小程序卡顿的问题
				"app-plus": {
					"bounce": "none" // 取消iOS回弹,避免和下拉刷新冲突 (小程序无法取消, 点此查看H5端的取消方法... )
				},
				"navigationBarTitleText": "充值中心"
			}
		},
		// 我的商品
		// {
		// 	"path": "pages/user/profile",
		// 	"style": {
		// 		"navigationBarTitleText": "个人资料"
		// 	}
		// },
		// 意见
		{
			"path": "pages/user/feedback",
			"style": {
				"navigationBarTitleText": "意见建议"
			}
		},
		// 关于
		{
			"path": "pages/common/about",
			"style": {
				"navigationBarTitleText": "关于报价平台"
			}
		}],
	"globalStyle": {
		"navigationBarTextStyle": "white",
		"navigationBarTitleText": "报价平台",
		"navigationBarBackgroundColor": "#3B7ED5",
		"backgroundColor": "#F8F8F8"
	},
	"condition": { //模式配置，仅开发期间生效
		"current": 0, //当前激活的模式（list 的索引项）
		"list": [
			{
				"name": "首页",
				"path": "pages/article/index",
				"query": ""
			},
			{
				"name": "分类",
				"path": "pages/list/index",
				"query": ""
			},
			{
				"pagePath": "pages/user/index",
				"name": "我的",
				"query": ""
			}
			// {
			// 	"name": "详情",
			// 	"path": "pages/detail/detail",
			// 	"query": "id=2c9b6cd07b218807017b4922f25100b6&merchants=true"
			// }
		]
	},
	"tabBar": {
		"color": "#000000",
		"selectedColor": "#000000",
		"backgroundColor": "#FFFFFF",
		"list": [
			{
				"pagePath": "pages/article/index",
				"iconPath": "static/images/nav-1.png",
				"selectedIconPath": "static/images/nav-5.png"
				// "text": "首页"
			},
			{
				"pagePath": "pages/list/index",
				"iconPath": "static/images/nav-2.png",
				"selectedIconPath": "static/images/nav-6.png"
				// "text": "分类"
			},
			{
				"pagePath": "pages/merchants/index",
				"iconPath": "static/images/nav-3.png",
				"selectedIconPath": "static/images/nav-7.png"
				// "text": "供应商"
			},
			{
				"pagePath": "pages/user/index",
				"iconPath": "static/images/nav-4.png",
				"selectedIconPath": "static/images/nav-8.png"
				// "text": "我的"
			}
		]
	}
}
